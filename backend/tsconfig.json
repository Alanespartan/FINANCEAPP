{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",

        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@common/*": [ "../common/*" ],
            "@backend/*":[ "./src/*"],
            "@errors":   [ "./src/lib/errors" ],
            "@cards":    [ "./src/lib/cards"],
            "@loans":    [ "./src/lib/loans"],
            "@tools/*":  [ "./src/routes/v1/tools/*"]
        },

        "skipLibCheck": true
    },
    "tsc-alias": {
        "replacers": {
            "projectRefReplacer": {
                "enabled": true,
                "file": "./projectRefReplacer.js"
            }
        }
    },
    "include": ["./src"],
    "references": [
        { "path": "../common" }
    ]
}
