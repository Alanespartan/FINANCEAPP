{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",

        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@common/*":   [ "../common/*" ],
            "@backend/*":  [ "./src/*"],
            "@errors":     [ "./src/lib/errors" ],
            "@tools/*":    [ "./src/routes/v1/tools/*"],
            "@entities/*": [ "./src/lib/entities/*"]
        },

        "skipLibCheck": true,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "tsc-alias": {
        "replacers": {
            "projectRefReplacer": {
                "enabled": true,
                "file": "./projectRefReplacer.js"
            }
        }
    },
    "include": ["./src"],
    "references": [
        { "path": "../common" }
    ]
}
